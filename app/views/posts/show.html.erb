<div class="container my-4">
<div class="card card-show-post bg-secondary bg-opacity-25 shadow">
  <div class="card-body">
    <div class="text-end">
        <div class="dropstart">
          <button type="button" class="btn btn-outline-secondary" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-three-dots-vertical"></i>
          </button>
          <ul class="dropdown-menu">
            <% if user_signed_in? %>
              <% if current_user.id == @post.user.id %>
                <li>
                  <%= link_to 'Create new post', new_post_path, class:"dropdown-item" %>
                </li>
                <li>
                  <%= link_to 'Edit', edit_post_path, class:"dropdown-item" %>
                </li>
                <li>
                  <%= link_to 'Delete', @post, class:"dropdown-item", method: :delete, data: { confirm: 'Are you sure?' } %>
                </li>
                <% end %>
            <% end %>
            <li><hr class="dropdown-divider"></li>
            <li>
              <%= link_to 'Back', posts_path, class:"dropdown-item" %>
            </li>
          </ul>
        </div>
      </div>

      <% if @post.cover.attached? %>
        <%= image_tag(@post.cover, size: "200x200", alt: "...", class:"img-thumbnail rounded img-show") %>
      <% end %>
      

      <h1 class="text-center mb-4">
        <%= @post.title.upcase %>
      </h1>

      <div class="justify-comment me-3 ms-3">
        <p>
          <%= simple_format(@post.body.upcase_first) %>
        </p>
      </div>
  </div>
</div>
</div>

<div class="card">
  <div class="card-footer">
    <div class="container">
  <h1>Comment Form</h1>

      <p>
        <%= render partial: 'comments/form', locals: { post: @post, parent: nil} %>
      </p>
    </div>
    <div class="m-4">
      <div class="mb-4">
        <h5>
          <strong>Comments:</strong>
          <%= @post.comments.count %>
        </h5>
      </div>
      <%= render @post.comments.where(parent_id: nil).includes(:user).order(id: :desc) %>
    </div>
  </div>
</div>