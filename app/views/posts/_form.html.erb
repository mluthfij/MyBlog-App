<div class="card">
  <div class="card-body">
    <div class="text-end">
      <div class="dropstart">
        <button type="button" class="btn" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-three-dots-vertical"></i>
        </button>
        <ul class="dropdown-menu">
          <% if params[:action] == 'edit' %>
            <li>
              <%= link_to 'Create new post', new_post_path, class:"dropdown-item" %>
            </li>
            <li>
              <%= link_to 'Show', @post, class:"dropdown-item" %>
            </li>
            <li>
              <%= link_to 'Delete', @post, class:"dropdown-item", method: :delete, data: { confirm: 'Are you sure?' } %>
            </li>
            <li><hr class="dropdown-divider"></li>
          <% end %>
          <li>
            <%= link_to 'Back', posts_path, class:"dropdown-item" %>
          </li>
        </ul>
      </div>
    </div>
    <%= form_with(model: post) do |form| %>
      <% if post.errors.any? %>
        <%= render 'layouts/error_messages', obj: post %>
      <% end %>

    <%= form.hidden_field :user_id, value:current_user.id %>

      <div class="mb-3">
        <%= form.label :cover, class:"form-label" %>
        <%= form.file_field :cover, class:"form-control form-control-lg" %>
      </div>

      <div class="mb-3">
        <%= form.label :title, class:"form-label" %>
        <%= form.text_field :title, class:"form-control", placeholder:"Write your title here..." %>
      </div>
      <div class="mb-3">
        <%= form.label :body, class:"form-label" %>
        <%= form.text_area :body, class:"form-control", placeholder:"Add some text...", rows:"3", style:"min-height:200px;" %>
      </div>

      <div class="field">
      </div>

      <div class="actions">
        <%= form.submit class:"btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>
