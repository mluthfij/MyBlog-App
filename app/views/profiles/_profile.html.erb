<div class="card bg-dark card-profile">
  <div class="card-body">
    <% if @profile.admin? %>
      <h6 class="text-center">
        <span class="badge rounded-pill text-bg-danger">
            <% if current_user.id == @profile.id %>
              You are an admin
            <% else %>
              Admin
            <% end %>
        </span>
      </h6>
    <% end %>
    <h1 class="text-center text-white">
        <%= @profile.username %>
    </h1>
    <div class="text-center">
      <div>
        <% if @profile.avatar.present? %>
          <%= image_tag(@profile.avatar.variant(resize_to_fill: [350, 350]), class: "avatar-lg shadow mb-3 my-2 rounded-circle img-thumbnail") %>
        <% else %>
          <img src="https://png.pngtree.com/png-vector/20220608/ourmid/pngtree-user-mysterious-anonymous-account-vector-png-image_4816288.png" alt="Avatar" class="avatar-lg shadow mb-3 my-2 rounded-circle img-thumbnail">
        <% end %>
      </div>
        <span class="badge rounded-pill text-bg-dark">Has <%= @profile.posts.count %> posts</span>
        <div class="my-2"><%= link_to 'Edit Profile', edit_user_registration_path, class:"btn btn-outline-danger btn-sm" if current_user.id == @profile.id %></div class="my-2">
    </div>
  </div>
</div>
